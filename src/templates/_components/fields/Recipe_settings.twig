{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("nystudio107\\recipe\\assetbundles\\recipe\\RecipeAsset") %}

<div>
    {% if assetSources %}
        {{ forms.checkboxSelectField({
            label: "Asset Sources"|t,
            instructions: "Which sources do you want to select assets from?"|t,
            id: 'assetSources',
            name: 'assetSources',
            options: assetSources,
            values: field['assetSources']
        }) }}
    {% else %}
        {{ forms.field({
            label: "Asset Sources"|t,
        }, '<p class="error">' ~ "No asset sources exist yet."|t ~ '</p>') }}
    {% endif %}

</div>